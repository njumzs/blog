doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    if theme.favicon
      link(rel='icon', href=theme.favicon)
    if theme.rss
      link(rel='alternate', type='application/rss+xml', title=config.title href=theme.rss)
    link(rel='stylesheet', href='/styles.css')
    block head
      title= config.title
      
  body
    .container
      .columns.page-header
        h1= config.title
        
      .columns
        .navigation
          nav.menus-main
            if theme.icon
              a.favicon(href='/')
                img(alt=config.title, src=theme.icon)
                  
            +menus(theme.menus)
            
          if theme.right_menus
            nav.right.menus-right
              +menus(theme.right_menus)
            
      .columns
        .block-body.column.three-fourths
          block body
        .block-sidebar.column.one-fourth
          block sidebar
